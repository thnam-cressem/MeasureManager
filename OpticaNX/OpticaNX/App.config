<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
	</configSections>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>
	<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
		<targets>
			<target name="f" xsi:type="File" fileName="OpticaNX/${shortdate}.log" layout="${longdate} | ${uppercase:${level}} | ${message}"/>
			<target name="e" xsi:type="File" fileName="OpticaNX/${shortdate}.err" layout="${longdate} | ${uppercase:${level}} | ${message}"/>
			<target name="c" xsi:type="Console" layout="${uppercase:${level}} ${message}"/>
		</targets>
		<rules>
			<logger name="*" minlevel="Trace" writeTo="f"/>
			<logger name="*" minlevel="Trace" writeTo="c"/>
			<logger name="*" minlevel="Error" writeTo="e"/>
		</rules>
	</nlog>
</configuration>